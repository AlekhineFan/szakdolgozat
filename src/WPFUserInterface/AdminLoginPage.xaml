<Page x:Class="WPFUserInterface.AdminLoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPFUserInterface"
      mc:Ignorable="d" 
      Title="AdminLoginPage">

    <Grid Background="LightGray" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Column="0" Grid.Row="0" Text="Jelszó:" Margin="5" HorizontalAlignment="Right"/>
        <PasswordBox Grid.Column="1" Grid.Row="0" x:Name="passwordBoxPassword" Height="auto" Width="180" Margin="5"/>

        <Button Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" Width="80" Content="Belépés" Margin="8" Click="LoginButton_Click"/>
        <Button Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2" HorizontalAlignment="Right" Width="50" FontSize="10" Content="Vissza" Background="Gray" Click="BackButton_Click" Margin="0,0,10,10"/>
    </Grid>
</Page>
