<Page x:Class="WPFUserInterface.SubjectLoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPFUserInterface"
      xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      d:DataContext="{d:DesignInstance Type=local:SubjectLoginPage, IsDesignTimeCreatable=True}"
      Title="SubjectLoginPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical">
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                <TextBlock Text="Kérem adja meg a nemét!" Margin="5,5,5,5" FontSize="14" FontWeight="DemiBold"/>
                <CheckBox x:Name="checkBoxFemale" Content="Nő" Margin="5,6,5,0"/>
                <CheckBox x:Name="checkBoxMale" Content="Férfi" Margin="5,6,5,0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="Kérem adja meg az életkorát!" FontSize="14" FontWeight="DemiBold" Margin="5,5,5,10"/>
                <xctk:IntegerUpDown x:Name="integerUpDownAge" Width="60" Height="25" Margin="10,5,10,10"/>
            </StackPanel>
            <StackPanel>
                <TextBlock Text="Kérem írjon be egy felhasználónevet, majd nyomjon Entert! A teszt eredményei ezzel a névvel lesznek rögzítve." FontSize="14" FontWeight="DemiBold" Margin="0,0,0,10"/>
                <TextBox x:Name="textBoxSubjectName" Text="{Binding SubjectName, Mode=OneWayToSource, UpdateSourceTrigger=PropertyChanged}" Height="30" Width="140" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="14" KeyDown="TextBoxSubjectNameKeyDown"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
